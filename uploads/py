s = input()
n = len(s)
allb = 0
for ch in s:
    if ch == 'B':
        allb += 1
best = n
pos = 0
lb = 0
rb = allb

for i in range(n + 1):
    # сколько удалить
    d = rb
    if d < best:
        best = d
        pos = i
    if i < n and s[i] == 'B':
        lb += 1
        rb -= 1

# строим ответ
ans = ''
for i in range(n):
    if i < pos and s[i] == 'B':
        ans += 'B'
    elif i >= pos and s[i] == 'R':
        ans += 'R'

print(ans)
print(best)